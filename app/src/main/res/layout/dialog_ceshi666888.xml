<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/bg_fff_5">

        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="提示"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/font_16" />

        <RelativeLayout
            android:id="@+id/rl_6666"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_app_version"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_switch_env"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <RadioButton
                    android:id="@+id/rb_formal_env"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_env"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="正式"
                    android:textColor="@color/selector_font"
                    android:textSize="@dimen/font_14" />

                <RadioButton
                    android:id="@+id/rb_testing_env"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_env"
                    android:button="@null"
                    android:gravity="center"
                    android:text="测试"
                    android:textColor="@color/selector_font"
                    android:textSize="@dimen/font_14" />

                <RadioButton
                    android:id="@+id/rb_pre_env"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_env"
                    android:button="@null"
                    android:gravity="center"
                    android:text="预发布"
                    android:textColor="@color/selector_font"
                    android:textSize="@dimen/font_14" />

            </RadioGroup>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearlayout111"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_state_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_DDDDDD"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_state_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_FF6600"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

</LinearLayout>