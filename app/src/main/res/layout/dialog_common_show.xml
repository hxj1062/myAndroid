<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/line_background">

        <TextView
            android:id="@+id/tv_common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="规划路径对比"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/two_btn"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_common_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/two_btn_left"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_shape"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_3B3B3B"
                android:visibility="visible" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/two_btn_right"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_shape2"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/color_FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/one_btn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_common_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/one_btn_txt"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_shape2"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/color_FFFFFF" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>