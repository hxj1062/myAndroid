<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_login_change_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_339A9A9A">

    <!-- 100dp -->

    <RelativeLayout
        android:id="@+id/rl_login_change_inside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_ffffff_5">

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearlayout2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_app_version"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="提示"
                android:textSize="@dimen/font_14" />


            <RelativeLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/rl_6666"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/rg_change_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_formal_env777"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_weight="1"
                            android:background="@drawable/selector_env"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:text="管理员"
                            android:textColor="@color/selector_font"
                            android:textSize="@dimen/font_14" />

                        <RadioButton
                            android:id="@+id/rb_testing_env66"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_weight="1"
                            android:background="@drawable/selector_env"
                            android:button="@null"
                            android:gravity="center"
                            android:text="非管理员"
                            android:textColor="@color/selector_font"
                            android:textSize="@dimen/font_14" />


                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/rg_change_env"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rg_change_user"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_formal_env"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_weight="1"
                            android:background="@drawable/selector_env"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:text="正式"
                            android:textColor="@color/selector_font"
                            android:textSize="@dimen/font_14" />

                        <RadioButton
                            android:id="@+id/rb_testing_env"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_weight="1"
                            android:background="@drawable/selector_env"
                            android:button="@null"
                            android:gravity="center"
                            android:text="测试"
                            android:textColor="@color/selector_font"
                            android:textSize="@dimen/font_14" />


                        <RadioButton
                            android:id="@+id/rl_pre_env"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_weight="1"
                            android:background="@drawable/selector_env"
                            android:button="@null"
                            android:gravity="center"
                            android:text="预发布"
                            android:textColor="@color/selector_font"
                            android:textSize="@dimen/font_14" />


                    </RadioGroup>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rl_6666"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/ed_maintaincause"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bg_35f535_5"
                        android:gravity="center"
                        android:hint="请输入密码"
                        android:textSize="@dimen/font_12">


                    </EditText>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_version_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_cancel_selector"
                android:gravity="center"
                android:text="取消"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tv_version_sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_sure_selector"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/font_14" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>