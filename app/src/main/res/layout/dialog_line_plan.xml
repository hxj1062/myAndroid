<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/line_background">

        <TextView
            android:id="@+id/tv_notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="规划路径对比"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll00"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_notice_title"
            android:background="@drawable/line_jianbian"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="-10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="自定义规划预计"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="-10dp"
                android:src="@drawable/ic_vs" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="系统规划预计"
                android:textColor="@color/color_FF7108" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll01"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ll00"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="-10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="6小时05分"
                android:textColor="@color/color_D3D3D3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="-10dp"
                android:text="总时长"
                android:textColor="@color/color_FF7108" />

            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5小时25分"
                android:textColor="@color/color_3B3B3B" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll02"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ll01"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_distance1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="-10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="68KM"
                android:textColor="@color/color_D3D3D3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="-10dp"
                android:text="公里数"
                android:textColor="@color/color_FF7108" />

            <TextView
                android:id="@+id/tv_distance2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="60KM"
                android:textColor="@color/color_3B3B3B" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll03"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ll02"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_light_num1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="-10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="24个"
                android:textColor="@color/color_3B3B3B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="-10dp"
                android:text="红绿灯"
                android:textColor="@color/color_FF7108" />

            <TextView
                android:id="@+id/tv_light_num2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="28个"
                android:textColor="@color/color_D3D3D3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll04"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ll03"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fee1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="-2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="无"
                android:textColor="@color/color_3B3B3B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="-2dp"
                android:text="路费"
                android:textColor="@color/color_FF7108" />

            <TextView
                android:id="@+id/tv_fee2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="16元"
                android:textColor="@color/color_D3D3D3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll05"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ll04"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_travel_time1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="-14dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3小时05分"
                android:textColor="@color/color_D3D3D3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="-14dp"
                android:text="行驶时长"
                android:textColor="@color/color_FF7108" />

            <TextView
                android:id="@+id/tv_travel_time2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2小时"
                android:textColor="@color/color_3B3B3B" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll06"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ll05"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_replenish_time1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="-14dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3小时"
                android:textColor="@color/color_D3D3D3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="-14dp"
                android:text="补货时长"
                android:textColor="@color/color_FF7108" />

            <TextView
                android:id="@+id/tv_replenish_time2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2小时25分"
                android:textColor="@color/color_3B3B3B" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll06"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/btn_custom"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="26dp"
                android:background="@drawable/bg_shape"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingEnd="12dp"
                android:text="选用自定义"
                android:textColor="@color/color_3B3B3B" />

            <TextView
                android:id="@+id/btn_system"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="26dp"
                android:background="@drawable/bg_shape2"
                android:gravity="center"
                android:paddingLeft="19dp"
                android:paddingEnd="19dp"
                android:text="选用系统"
                android:textColor="@color/color_FFFFFF" />

        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_back_replenish"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_btn_bg"
        android:gravity="center"
        android:text="返回修改补货顺序"
        android:textColor="@color/white" />

</LinearLayout>