<?xml version="1.0" encoding="utf-8"?>
<com.example.look.customview.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/shape_rectangle_solid_home_item_5"
    android:orientation="vertical">

    <com.example.look.customview.CheckableLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rectangle_solid_home_item_5"
        android:duplicateParentState="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/daily_child_item1_vmcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|bottom"
                    android:textColor="@color/color_3B3B3B"
                    android:textSize="@dimen/font_18"
                    tools:text="11111" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_FFFFF0E3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/ico_new_home"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_FFFF7108"
                    android:textSize="@dimen/font_12"
                    tools:text="不可补货时间:21:00-10:00" />

            </LinearLayout>

            <!--item内容-->
            <RelativeLayout
                android:id="@+id/item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">


                    <LinearLayout
                        android:id="@+id/daily_child_item1_content_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="8"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginRight="2dp"
                                android:background="@drawable/icon_machina5" />


                            <TextView
                                android:id="@+id/daily_child_vm_type_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:gravity="left|bottom"
                                android:textColor="@color/color_3B3B3B"
                                android:textSize="@dimen/font_14"
                                tools:text="售货机xxxxx" />

                            <TextView
                                android:id="@+id/daily_child_jilian_tag"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/shape_jilian"
                                android:gravity="center"
                                android:text="联"
                                android:textColor="@color/color_app"
                                android:textSize="@dimen/font_10"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/img_item_child_stock"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/daily_stock"
                                android:visibility="gone" />


                            <ImageView
                                android:id="@+id/img_item_child_stock_losstype4"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/ico_new_home"
                                android:visibility="gone"
                                tools:visibility="visible" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="top"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="top"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="2dp"
                                android:background="@drawable/icon_lacation5" />

                            <TextView
                                android:id="@+id/daily_child_item1_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left|top"
                                android:textColor="@color/color_3B3B3B"
                                android:textSize="@dimen/font_14"
                                tools:text="地址" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="8dp">
                        <!--TODO 第一个圆圈 机器-->
                        <LinearLayout
                            android:id="@+id/daily_child_item1_progress_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="36dp"
                                android:layout_height="38dp"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <com.example.look.customview.CircleProgressBar
                                    android:id="@+id/daily_child_item1_progress"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_centerInParent="true" />


                                <TextView
                                    android:id="@+id/daily_child_item1_progress_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textColor="@color/color_app"
                                    android:textSize="@dimen/font_14" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/vm_loss_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:maxEms="5"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/color_707070"
                                android:textSize="@dimen/font_12"
                                tools:text="机器缺货" />
                        </LinearLayout>
                        <!--TODO 第二个圆圈 柜-->
                        <LinearLayout
                            android:id="@+id/daily_child_item1_loss_progress_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="36dp"
                                android:layout_height="38dp"
                                android:gravity="center">

                                <com.example.look.customview.CircleProgressBar
                                    android:id="@+id/daily_child_item1_loss_progress"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true" />

                                <TextView
                                    android:id="@+id/daily_child_item1_loss_progress_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textColor="@color/color_app"
                                    android:textSize="@dimen/font_14" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/cup_loss_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:maxEms="5"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/color_707070"
                                android:textSize="@dimen/font_12"
                                tools:text="便利柜缺货" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <!--vm_check_selector-->
                <ImageView
                    android:id="@+id/item_check"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:duplicateParentState="true"
                    android:src="@drawable/vm_checked"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </RelativeLayout>

        </LinearLayout>


    </com.example.look.customview.CheckableLinearLayout>

</com.example.look.customview.CheckableLinearLayout>